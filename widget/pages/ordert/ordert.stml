<template>
    <view class="page">
		<view class="block" v-if={odata}>
			<scroll-view class="scroll-view" scroll-y>
				<!-- 地址信息 -->
				<view class="address_container">
					<view class="address_box" onclick="onAddressBoxTap">
						<image class="address_img" src="../../images/main1/address.png"></image>
						<view class="address_wrap">
							<!-- 无地址 -->
							<text class="noaddress" v-if={ptype == 1 && !useraddress}>请添加收货地址</text>
							<!-- 配送 -->
							<view class="address_cont" v-if={ptype == 1 && useraddress}>
								<view class="address_tit">
									<text class="address_name">{'收货人：' + useraddress.name}</text>
									<view class="flex1"></view>
									<text class="address_phone">{$filter.phoneHash(useraddress.phone.toString())}</text>
								</view>
								<text class="address_details">{useraddress.qustr + useraddress.address}</text>
							</view>
						</view>
						<image class="address_gor" src="../../images/main1/gor2_2.png"></image>
					</view>
				</view>
				<!-- 商品信息 -->
				<view class="list_box">
					<!-- 用于循环的对象 -->
					<order-goods dataList={odata.buyData}></order-goods>
				</view>
				<!-- 小格 -->
				<view class="ge_box">
					<view class="ge_list border-bottom" v-for="(item,index) in displayList">
						<text class="ge_zi">{item.title}</text>
						<text class="ge_rzi">{item.detail}</text>
					</view>
				</view>
				<!-- 备注 -->
				<view v-if={api.pageParam.act == 'buy'}>
					<text class="bei_zi">备注</text>
					<view class="bei_box">
						<textarea class="bei_area" id="beizhu" placeholder="留下您想对商家说的话" oninput="oninput"></textarea>
					</view>
				</view>
				<!-- 规则 -->
				<view v-if={pintuancontent}>
					<text class="bei_zi">拼团规则</text>
					<rich-text class="gui_zi" nodes={pintuancontent}></rich-text>
				</view>
			</scroll-view>
			<view class="footer">
				<view class="floor_btns">
					<text class="floor_zi">{'共' + odata.orderBuynum + '件'}</text>
					<text class="floor_rzi">应付：</text>
					<text class="floor_szi">¥</text>
					<text class="floor_mzi">{odata.payPrice}</text>
					<text class="floor_btn" onclick="fnGoPay">去支付</text>
				</view>
				<safe-area></safe-area>
			</view>
		</view>
    </view>
</template>
<script>
import $util from '../../utils/util.js'
import $filter from '../../utils/filter.js'
import '../../components/order-goods.stml'
export default {
	name: 'zone',
	data() {
		return{
			ptype: 1,    // 提货方式
			odata: null,
			buynum: 0,
			useraddress: null,
			beizhu: '',
			displayList: [],
			pintuancontent: null
		}
	},
	methods: {
		apiready(){
			api.addEventListener({
				name:'useraddress'
			}, (ret)=>{
				this.data.useraddress = ret.value;
			});
			$util.showProgress();
			this.getOrderData();
			if (api.pageParam.act != 'buy') {
				this.getPintuancontent();
			}
		},
		onAddressBoxTap(){
			if (this.data.useraddress) {
				$util.openWin({
					name: 'address',
					url: '../address/address.stml',
					title: '收货地址',
					pageParam: {
						from: 'order'
					}
				});
			} else {
				$util.openWin({
					name: 'address_edit',
					url: '../address_edit/address_edit.stml',
					title: '新增收货地址',
					pageParam: {
						from: 'order'
					}
				});
			}
		},
		openPayResultPage(type, orderid){
			let otype = 1;
			let act = api.pageParam.act;
			$util.openWin({
				name: 'pay',
				url: '../pay/pay.stml',
				title: '支付结果',
				pageParam: {
					type: type,
					orderid: orderid,
					act: api.pageParam.act,
					pnum: this.data.odata.pnum - 1
				}
			});
		},
		oninput(e){
			this.data.beizhu = e.detail.value;
		},
		getPintuancontent(){
			$util.ajax({
				url: 'homes/about',
				cache: true
			}, (ret,err)=>{
				if (ret && ret.errcode == 0) {
					this.data.pintuancontent = ret.data.pintuancontent;
				}
			});
		},
		getOrderData(){
			let postData = api.pageParam;
			postData.type = this.data.ptype == 1 ? 'wuliu' : 'zt';
			var url = 'homes/orderTlist';
			$util.ajax({
				url: url,
				method: 'post',
				data: {
					body: postData
				}
			}, (res, err)=> {
				if (res) {
					if (res.errcode == 0) {
						let data = res.data;

						let displayList = [];
						if (api.pageParam.act == 'can') {
							displayList = displayList.concat([{
								title: '拼团时间',
								detail: $filter.dateFormat(data.ktime)
							}]);
						}
						if (api.pageParam.act != 'buy') {
							displayList = displayList.concat([{
								title: '拼团人数',
								detail: data.pnum + '人'
							}]);
						}
						displayList = displayList.concat([{
							title: '商品金额',
							detail: '￥' + data.orderPrice
						},{
							title: '邮费',
							detail: '￥' + data.yunfeiPrice
						}]);
						this.data.displayList = displayList;

						let buynum = 0;
						for (let i in data.buyData) {
							let _buy = data.buyData[i];
							let _num = parseInt(_buy.buynum);
							buynum += _num;
						}
						this.data.buynum = buynum;
						this.data.useraddress = data.address;
						this.data.odata = data;
					} else {
						$util.toast(res.msg);
					}
				} else {
					$util.toast('网络错误');
				}
				$util.hideProgress();
			});
		},
		fnGoPay(){
			let useraddress = this.data.useraddress;
			let ptype = this.data.ptype;
			let param = api.pageParam;
			let beizhu = this.data.beizhu;
			let post = {};
			post.beizhu = beizhu ? beizhu : '';
			post.act = param.act;
			if (param.act == 'cart') {
				post.cartids = param.cartids;
			} else {
				post.goodsid = param.goodsid;
				post.buynum = param.buynum;
				post.key = param.key;
			}
			post.type = ptype == 1 ? 'wuliu' : 'zt';
			if (ptype == 1) {
				post.address = useraddress;
				if (!post.address){
					$util.toast('请添加收货地址');
					return;
				}
			}

			$util.showProgress();
			$util.ajax({
				method: 'post',
				url: 'homes/orderTadd',
				data: {
					body: post
				}
			}, (res, err)=>{
				if (res){
					if (res.errcode == 0) {
						this.fnPayBywx(res.orderids);
					} else {
						$util.hideProgress();
						$util.toast(res.msg);
					}
				} else {
					$util.hideProgress();
					$util.toast('网络错误');
				}
			});
		},
		fnPayBywx(ids){
			// 模拟支付结果
			// this.openPayResultPage('err', res.orderids);
			// this.openPayResultPage('ok', res.orderids);
			// return;

			$util.payOrder(ids, (flag, msg)=>{
				$util.hideProgress();
				$util.toast(msg);
				if (flag) {
					//支付成功
					this.openPayResultPage('ok', ids);
				} else {
					this.openPayResultPage('err', ids);
				}
			});
		}
	}
}
</script>
